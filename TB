module tb_n_to_1_mux; parameter WIDTH = 4; parameter N = 6;
reg [N*WIDTH-1:0] in; reg [$clog2(N)-1:0] sel; wire [WIDTH-1:0] out;
n_to_1_mux #(.N(N), .WIDTH(WIDTH)) uut (
.in(in),
.sel(sel),
.out(out)
);
integer i; initial begin in = 0;
for (i = 0; i < N; i = i + 1) begin in = in | (i << (i * WIDTH));
end
for (i = 0; i < N; i = i + 1) begin sel = i;
#10;
$display("sel=%d -> out=%b", sel, out);
end
$finish; end endmodule
